<% include partials/header %>

<div class="ui raised segment padded container">
    <h1 class="ui header">Edit "<%= animal.name %>"</h1>
    <form action="/animals/<%= animal._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Name</label>
            <input name="animal[name]" type="text" placeholder="Name" value="<%= animal.name %>"></input>        
        </div>
        <div class="field">
            <label>Image URL</label>
            <input name="animal[image]" type="text" placeholder="Image URL" value="<%= animal.image %>"></input>
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="animal[desc]" placeholder="Description"><%= animal.desc %></textarea>
        </div>
        <input class="ui inverted yellow button" type="submit" value="Update"></input>
    </form>
</div>

<% include partials/footer %>